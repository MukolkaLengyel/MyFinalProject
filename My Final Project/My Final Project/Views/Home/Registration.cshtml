@using BitLink.Dao;
@model Person

@{
    ViewData["Title"] = "Create Account";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateAccount" method="post">
    <div class="form-group">
        <label for="fname">Full Name:</label><br>
        <input placeholder="Enter Your Name" type="fname" id="fname" class="form-control" aria-labelledby="fname" required></input>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable for="uname">Username:</lable><br>
        <input placeholder="Write your creative Username" type="uname" id="uname" class="form-control" aria-labelledby="uname" required></input>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="age">Your Age:</label>
        <input placeholder="Your Age" type="age" id="age" class="form-control" aria-labelledby="age" required></input>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <lable for="password">Password:</lable>
        <input placeholder="1234" type="password" id="password" class="form-control" aria-labelledby="password" required></input>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable asp-for="gender">Gender</lable>
        <select asp-for="Gender" class="form-control">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Login</button>
    </div>

</form>